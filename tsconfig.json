{
  "compilerOptions": {
    "typeRoots": ["types"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "out-tsc",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "out-tsc/dts",
    "skipLibCheck": true,
    "esModuleInterop": false
  },
  "include": ["./src"],
  "exclude": ["**/node_modules"]
}
